{
    "name": "code-explainer",
    "displayName": "Code Explainer",
    "description": "A VSCode extension that explains the code you're looking at.",
    "version": "1.0.0",
    "publisher": "irontitan",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Code Explainer",
            "properties": {
                "codeExplainer.experienceLevel": {
                "type": "string",
                "default": "Novice",
                "enum": ["Novice", "Intermediate", "Expert"],
                "description": "Set your experience level for the programming language that you will be using this extension with.",
                "scope": "application"
                }
            }
        },
        "languages": [
            {
                "id": "plaintext",
                "extensions": [
                    ".txt"
                ],
                "aliases": [
                    "Plain Text",
                    "text"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/axios": "^0.9.36",
        "@types/node": "^22.10.1",
        "@types/vscode": "^1.60.0",
        "typescript": "^4.4.3",
        "vscode-test": "^1.5.2"
    },
    "dependencies": {
        "axios": "^1.7.9"
    }
}
